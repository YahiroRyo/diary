---
import '../../styles/global.css';
import MainWithNavigation from "../../components/template/MainWithNavigation.astro";
import { format } from "../../modules/formatTitle";

export const getStaticPaths = async () => {
  const diaryBlogList = await Astro.glob("../../content/**/*.md");

  return diaryBlogList.map((diaryBlog) => ({
    params: {
        title: format(diaryBlog.frontmatter.title),
    },
    props: {
        diaryBlog,
    },
  }));
};

const { Content } = Astro.props.diaryBlog;
const { title } = Astro.props.diaryBlog.frontmatter;
---

<MainWithNavigation title={format(title)} description={`${format(title)}の日記です。`}>
    <article class="markdown-body">
      <Content />
    </article>
</MainWithNavigation>


<style>
    .markdown-body {
      margin-top: 3rem;
    }
  </style>